<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Admin</title>
  <link rel="stylesheet" href="/css/admin/Dashboard.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body>

<main class="main-content">
  <header class="content-header">
    <div>
      <h1><i class="bi bi-speedometer2"></i> Dashboard</h1>
      <p class="text-muted">Welcome back! Here's your business overview</p>
    </div>
  </header>

  <div class="overview-grid">
    <div class="stat-card bg-primary">
      <div class="card-icon">
        <i class="bi bi-cart-check"></i>
      </div>
      <div class="card-content">
        <h6>Total Orders</h6>
        <h2 id="totalOrders">0</h2>
      </div>
    </div>

    <div class="stat-card bg-success">
      <div class="card-icon">
        <i class="bi bi-currency-rupee"></i>
      </div>
      <div class="card-content">
        <h6>Total Revenue</h6>
        <h2 id="totalRevenue">â‚¹0</h2>
      </div>
    </div>

    <div class="stat-card bg-info">
      <div class="card-icon">
        <i class="bi bi-people"></i>
      </div>
      <div class="card-content">
        <h6>Total Users</h6>
        <h2 id="totalUsers">0</h2>
      </div>
    </div>

    <div class="stat-card bg-warning">
      <div class="card-icon">
        <i class="bi bi-box-seam"></i>
      </div>
      <div class="card-content">
        <h6>Total Products</h6>
        <h2 id="totalProducts">0</h2>
      </div>
    </div>
  </div>

  <div class="charts-grid">
    <div class="chart-card">
      <div class="card-header">
        <h5><i class="bi bi-graph-up"></i> Sales Overview (Last 7 Days)</h5>
      </div>
      <canvas id="salesChart"></canvas>
    </div>

    <div class="chart-card">
      <div class="card-header">
        <h5><i class="bi bi-pie-chart"></i> Order Status</h5>
      </div>
      <canvas id="statusChart"></canvas>
    </div>
  </div>

  <div class="data-grid">
    <div class="data-card">
      <div class="card-header">
        <h5><i class="bi bi-clock-history"></i> Recent Orders</h5>
      </div>
      <div class="table-wrapper">
        <table class="data-table">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Amount</th>
              <th>Status</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody id="recentOrdersBody"></tbody>
        </table>
      </div>
    </div>

    <div class="data-card">
      <div class="card-header">
        <h5><i class="bi bi-trophy"></i> Top Products</h5>
      </div>
      <div class="top-products-list" id="topProductsList"></div>
    </div>
  </div>

  <div class="payment-card">
    <div class="card-header">
      <h5><i class="bi bi-credit-card"></i> Payment Methods Distribution</h5>
    </div>
    <div class="payment-grid" id="paymentGrid"></div>
  </div>
</main>

<div id="loadingOverlay" class="loading-overlay">
  <i class="bi bi-hourglass-split"></i>
  <div>Loading dashboard...</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/admin/dashboard.js"></script>

</body>
</html>