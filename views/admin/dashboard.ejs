<link rel="stylesheet" href="/public/css/admin/dashboard.css">

<div class="dashboard-wrapper">

  <!-- Page Title -->
  <div class="page-header">
    <h1 class="page-title">Admin Dashboard</h1>
    <p class="page-subtitle">Welcome back, Alex!</p>
  </div>

  <!-- Stats Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon today-sales">
        <i class="fas fa-dollar-sign"></i>
      </div>
      <div class="stat-info">
        <h3>Today's Sales</h3>
        <div class="stat-value">$12,450</div>
        <div class="stat-change positive">+5.4%</div>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon pending">
        <i class="fas fa-clock"></i>
      </div>
      <div class="stat-info">
        <h3>Pending Orders</h3>
        <div class="stat-value">15</div>
        <div class="stat-change positive">+2.1%</div>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon customers">
        <i class="fas fa-users"></i>
      </div>
      <div class="stat-info">
        <h3>New Customers</h3>
        <div class="stat-value">28</div>
        <div class="stat-change positive">+10.2%</div>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon revenue">
        <i class="fas fa-chart-line"></i>
      </div>
      <div class="stat-info">
        <h3>Total Revenue (Month)</h3>
        <div class="stat-value">$150,830</div>
        <div class="stat-change positive">+8.9%</div>
      </div>
    </div>
  </div>

  <!-- Recent Activity Table -->
  <div class="activity-section">
    <h2 class="section-title">Recent Activity</h2>
    <div class="table-container">
      <table class="activity-table">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Total</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>#CRA-1254</td>
            <td>John Doe</td>
            <td><span class="status completed">Completed</span></td>
            <td>$2,499.00</td>
            <td>2023-10-26</td>
          </tr>
          <tr>
            <td>#CRA-1253</td>
            <td>Jane Smith</td>
            <td><span class="status processing">Processing</span></td>
            <td>$1,850.00</td>
            <td>2023-10-26</td>
          </tr>
          <tr>
            <td>#CRA-1252</td>
            <td>Mike Johnson</td>
            <td><span class="status shipped">Shipped</span></td>
            <td>$5,300.00</td>
            <td>2023-10-25</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>