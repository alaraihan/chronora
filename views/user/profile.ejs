<link rel="stylesheet" href="/css/user/profile.css">

<div class="chronora-profile container">
  <%- include('../partials/user/sidebar') %>

  <main class="main-area">
    <header class="main-header">
      <h1>My Profile</h1>
    </header>

    <div class="profile-card card">
      <!-- Profile Image -->
      <div class="profile-field">
        <span>Profile Image</span>
        <img src="<%= user.profileImage ? user.profileImage : '/images/default.png' %>" alt="Profile Image" class="profile-img">

 <a href="/profile/edit/image" class="btn btn-primary edit-btn">Edit</a>
      </div>

      <!-- Full Name -->
      <div class="profile-field">
        <span>Full Name</span>
        <p><%= user.fullName %></p>
        <a href="/profile/edit/name" class="btn btn-primary edit-btn">Edit</a>
      </div>

      <!-- Email -->
      <div class="profile-field">
        <span>Email Address</span>
        <p><%= user.email %></p>
        <a href="/profile/edit/email" class="btn btn-primary edit-btn">Edit</a>
      </div>
    </div>
  </main>
</div>
