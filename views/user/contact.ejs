<% /* contact.ejs â€” rendered inside layout.ejs */ %>
<link rel="stylesheet" href="./css/user/contact.css">

<section class="contact-page">
  <div class="contact-container">

    <header class="contact-header">
      <h1>Contact Our Team</h1>
      <p class="lead">We're here to assist you. Reach us through these ways</p>
    </header>

    <div class="contact-grid">

      <!-- Left: contact methods -->
      <div class="contact-info">
        <h2>Other Ways to Reach Us</h2>

        <ul class="contact-list">
          <li>
            <span class="icon"><i class="fa-solid fa-phone"></i></span>
            <div class="meta">
              <strong>Phone Number</strong>
              <span>+1 (234) 567-890</span>
            </div>
          </li>

          <li>
            <span class="icon"><i class="fa-regular fa-envelope"></i></span>
            <div class="meta">
              <strong>Email Address</strong>
              <span>support@chronora.com</span>
            </div>
          </li>

          <li>
            <span class="icon"><i class="fa-regular fa-clock"></i></span>
            <div class="meta">
              <strong>Business Hours</strong>
              <span>Mon - Fri: 9:00 AM - 6:00 PM</span>
            </div>
          </li>
        </ul>
      </div>

      <!-- Right: showroom card -->
      <aside class="showroom-card">
        <h3>Visit Our Showroom</h3>
        <div class="showroom-image">
          <img src="/images/showroom.jpg" alt="Chronora Showroom" />
        </div>
        <div class="showroom-address">
          <p>123 Luxury Avenue, Suite 100, New York, NY 10001, USA</p>
        </div>
      </aside>

    </div> <!-- /.contact-grid -->

  </div> <!-- /.contact-container -->
</section>
