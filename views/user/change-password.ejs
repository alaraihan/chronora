
<link rel="stylesheet" href="/css/user/change-password.css">

<div class="profile-wrapper">

  <%- include('../partials/user/sidebar') %>

  <div class="profile-main-content">
    <h1 class="page-title">Change Password</h1>
    <p class="page-subtitle">For your security, we recommend using a strong, unique password</p>

    <div class="password-card">
      <form id="changePasswordForm">
        <div class="form-group">
          <label>Current Password</label>
          <div class="password-wrapper">
            <input type="password" id="currentPassword" name="currentPassword" placeholder="Enter your current password" required />
            <i class="fas fa-eye-slash toggle-password" data-target="currentPassword"></i>
          </div>
        </div>

        <div class="form-group">
          <label>New Password</label>
          <div class="password-wrapper">
            <input type="password" id="newPassword" name="newPassword" placeholder="Enter your new password" required />
            <i class="fas fa-eye-slash toggle-password" data-target="newPassword"></i>
          </div>
        </div>

        <div class="form-group">
          <label>Confirm New Password</label>
          <div class="password-wrapper">
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your new password" required />
            <i class="fas fa-eye-slash toggle-password" data-target="confirmPassword"></i>
          </div>
        </div>

        <div class="form-actions">
          <button type="button" class="btn-cancel" onclick="history.back()">Cancel</button>
          <button type="submit" class="btn-save">
            <span class="btn-text">Save Password</span>
            <span class="btn-loader hidden"><i class="fas fa-spinner fa-spin"></i></span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="/js/user/change-password.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
