<link rel="stylesheet" href="/css/user/profile.css">


<div class="chronora-profile container">
  <%- include('../partials/user/sidebar') %>

  <main class="main-area">
    <header class="main-header">
      <h1>Edit Full Name</h1>
    </header>

    <div class="edit-card card">
      <form id="edit-name-form">
        <div class="form-group">
          <label for="fullName">Full Name</label>
          <input 
            type="text" 
            id="fullName" 
            name="fullName" 
            value="<%= user.fullName %>" 
            placeholder="Enter your full name" 
            required
          >
        </div>

        <button type="submit" class="btn btn-primary" id="saveNameBtn">Save</button>
        <a href="/profile" class="btn btn-secondary cancel-btn">Cancel</a>
      </form>
    </div>
  </main>
</div>


<script src="/js/user/profile-name-edit.js"></script>
