<link rel="stylesheet" href="./css/user/landing.css">

<div class="home-container">
  <!-- HERO SECTION -->
  <section class="hero">
    <div class="hero-content">
      <h1>A Legacy of Precision.<br />The Art of Timekeeping</h1>
      <p>
        Discover our collection of meticulously crafted timepieces,
        where tradition meets contemporary design.
      </p>
      <a href="/shop" class="btn">Shop Now</a>
    </div>
  </section>

  <!-- ORIGINAL STATIC COLLECTION (UNCHANGED) -->
  <section class="collection">
    <h2>Explore the Collection</h2>
    <div class="product-grid">
      <div class="product-card">
        <img src="./images/download (4).jpg" alt="The Chronora Dress Watch" />
        <h3>The Chronora Dress Watch</h3>
        <p>Refined • Elegant</p>
      </div>
      <div class="product-card">
        <img src="./images/download (11).jpg" alt="The Elysium Classic Watch" />
        <h3>The Elysium Classic Watch</h3>
        <p>Minimal • Timeless</p>
      </div>
      <div class="product-card">
        <img src="./images/download (12).jpg" alt="The Majesty Chronograph" />
        <h3>The Majesty Chronograph</h3>
        <p>Sporty • Bold</p>
      </div>
      <div class="product-card">
        <img src="./images/download (5).jpg" alt="The Heritage Grand Watch" />
        <h3>The Heritage Grand Watch</h3>
        <p>Vintage • Distinctive</p>
      </div>
    </div>
  </section>

  <!-- NEW: SHOP BY CATEGORY SECTION (FROM DATABASE) -->
  <section class="categories-section">
    <div class="container">
      <h2 class="section-title">Shop by Category</h2>

      <% if (categories && categories.length > 0) { %>
        <div class="categories-grid">
          <% categories.forEach(category => { %>
            <a href="/watch?category=<%= category._id %>" class="category-card-link">
              <div class="category-card">
                <img 
                  src="<%= category.image || '/images/default-category.jpg' %>" 
                  alt="<%= category.name %>"
                  class="category-img"
                >
                <div class="category-overlay">
                  <h3 class="category-name"><%= category.name %></h3>
                  <span class="view-text">View Collection →</span>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <p class="no-categories">No categories available yet.</p>
      <% } %>
    </div>
  </section>

  <!-- PRECISION SECTION -->
  <section class="precision">
    <div class="precision-image">
      <img src="./images/8e0b86715ff08b729a66d9983df759c6.jpg" alt="Watch Mechanism" />
    </div>
    <div class="precision-content">
      <h2>A Legacy of Precision</h2>
      <p>
        Our timepieces are the result of decades of craftsmanship and
        innovation. Every component is meticulously engineered to
        ensure precision, durability, and timeless beauty.
      </p>
      <a href="/discover" class="btn">Discover More</a>
    </div>
  </section>
</div>