<link rel="stylesheet" href="/css/user/profile.css">

<div class="chronora-profile container">
  <%- include('../partials/user/sidebar') %>
  <main class="main-area">
    <header class="main-header">
      <h1>Edit Profile Image</h1>
      <p class="subtitle">Upload a new profile picture to update your account.</p>
    </header>

    <div class="profile-card card">
      <form class="edit-form">
        <div class="profile-field">
          <span>Current Image</span>
          <img src="<%= user.profileImage || '/images/default.png' %>" alt="Profile Image" class="profile-img" id="preview">
        </div>

        <div class="profile-field">
          <span>Upload New Image</span>
          <input type="file" name="profileImage" accept="image/*" id="fileInput">
        </div>

        <div class="form-actions action-buttons">
          <button type="submit" class="btn-primary">Save</button>
          <a href="/profile" class="btn-ghost">Cancel</a>
        </div>
      </form>
    </div>
  </main>
</div>


<script src="/js/user/profile-image-edit.js"></script>
