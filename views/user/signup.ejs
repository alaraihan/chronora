
<link rel="stylesheet" href="./css/user/signup.css">

  <main class="card" aria-labelledby="title">
    <h1 id="title">Create an account</h1>


    <form id="signupForm" novalidate method="POST" action="/signup">
      <!-- Full name -->
      <div class="field">
        <label for="name">Full name</label>
        <input id="name" name="fullName" type="text" required minlength="2" placeholder="Your name" />
        <div class="error" id="nameError">Please enter at least 2 characters.</div>
      </div>

      <!-- Email -->
      <div class="field">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" required placeholder="email@example.com" />
        <div class="error" id="emailError">Please enter a valid email address.</div>
      </div>

      <!-- Password -->
      <div class="field">
        <label for="password">Password</label>
        <div class="row">
          <input id="password" name="password" type="password" required minlength="8" placeholder="At least 8 characters" />
          <button type="button" class="toggle-btn" data-for="password">Show</button>
        </div>
        <div class="error" id="passwordError">Password must be at least 8 characters.</div>
      </div>

      <!-- Confirm password -->
      <div class="field">
        <label for="confirm">Confirm password</label>
        <div class="row">
          <input id="confirm" name="confirm" type="password" required placeholder="Re-enter password" />
          <button type="button" class="toggle-btn" data-for="confirm">Show</button>
        </div>
        <div class="error" id="confirmError">Passwords do not match.</div>
      </div><label for="referralCode" class="form-label">
        Referral Code <span class="text-muted">(Optional)</span>
    </label>
    <input
        type="text"
        id="referralCode"
        name="referralCode"
        class="form-control"
        placeholder="e.g. FRIEND10 or ALEX7K9P"
        maxlength="12"
        style="text-transform: uppercase;"
        autocomplete="off"
    />
    <small class="form-text text-muted mt-2 d-block">
        Have a referral code from a friend? Enter it here to get a special discount on your first order! üéÅ
    </small>

      <!-- Terms checkbox -->
      <div class="field row" style="align-items:center">
        <input id="agree" name="agree" type="checkbox" required />
        <label for="agree" class="small">I agree to the <a href="#" style="color:var(--accent);text-decoration:none">terms</a></label>
      </div>

      <button class="btn" type="submit">Create account</button>

      <div class="success" id="successMsg">Account created successfully ‚Äì redirecting‚Ä¶</div>
    </form>

    <!-- ===== Simplified Google Sign-In Button ===== -->
    <a href="/auth/google" class="google-btn">Continue with Google</a>
  </main>
</body>
<script src="/js/user/signup.js"></script>


